{
    "schemaVersion": 1,
    "id": "bettermobcombat",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "homepage": "https://fabricmc.net/",
        "sources": "https://github.com/Thelnfamous1/Better-Mob-Combat",
        "issues": "https://github.com/Thelnfamous1/Better-Mob-Combat/issues"
    },
    "license": "${license}",
    "icon": "assets/modid/${mod_id}.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "me.Thelnfamous1.bettermobcombat.BetterMobCombatFabric"
        ],
        "client": [
            "me.Thelnfamous1.bettermobcombat.BetterMobCombatFabricClient"
        ]
    },
    "mixins": [
        "${mod_id}.mixins.json",
        "${mod_id}.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=17",
        "bettercombat": ">=${better_combat_version_min}",
        "mobplayeranimator": ">=${mob_player_anim_version_min}",
        "player-animator": ">=${player_anim_version_min}",
        "cloth-config": ">=${cloth_config_version_min}"
    },
    "suggests": {
        "another-mod": "*"
    }
}
  